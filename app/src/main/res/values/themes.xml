<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HistoricalPetersburg" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/white</item>
<!--        <item name="colorPrimary">#FFFFFF</item>-->
<!--        <item name="colorPrimaryVariant">#9E9E9E</item>-->
<!--        <item name="colorOnPrimary">@color/black</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="preferenceTheme">@style/SettingsTheme</item>
        <item name="android:windowBackground">?colorPrimary</item>
        <item name="android:textColorSecondary">?colorSecondaryVariant</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/none</item>
        <item name="android:windowSplashScreenBackground">#00b5df</item>
    </style>

    <style name="TransparentActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:itemBackground">@color/black</item>
        <item name="actionOverflowButtonStyle">@style/CustomOverflowMenu</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="CustomOverflowMenu" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <!-- Start check custom -->
    <style name="DarkCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorAccent">#8A0000</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <!-- End check custom -->

    <!-- Start spinner custom -->
    <style name="SpinnerDarkTheme">
        <item name="android:background">?colorPrimaryVariant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>
    <!-- End spinner custom -->

    <!-- Start settings custom -->
    <style name="PreferenceCategoryTitleTextAppearance" parent="PreferenceCategoryTitleTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsTheme" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceCategoryTitleTextAppearance">@style/PreferenceCategoryTitleTextAppearance</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textAppearance">?colorOnPrimary</item>
        <item name="android:textColorSecondary">?colorSecondaryVariant</item>
    </style>
    <!-- End settings custom -->

    <style name="MainBottomSheetDialog" parent="Theme.HistoricalPetersburg">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>