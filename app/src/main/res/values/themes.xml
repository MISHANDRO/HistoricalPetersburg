<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HistoricalPetersburg" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/white</item>
<!--        <item name="colorPrimary">#FFFFFF</item>-->
<!--        <item name="colorPrimaryVariant">#9E9E9E</item>-->
<!--        <item name="colorOnPrimary">@color/black</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="preferenceTheme">@style/SettingsTheme</item>
        <item name="android:windowBackground">?colorPrimary</item>
        <item name="android:textColorSecondary">?colorSecondaryVariant</item>


    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/none</item>
        <item name="android:windowSplashScreenBackground">#00b5df</item>
    </style>


    <!-- Bottom sheet themes -->
    <style name="InsetBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/InsetModalStyle</item>
    </style>

    <style name="InsetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_primary_round_all_30_inset_10</item>
    </style>

    <style name="DefaultBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/DefaultModalStyle</item>
    </style>

    <style name="DefaultModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_primary_round_up_10</item>
    </style>
    <!-- End bottom sheet themes -->

    <!-- Start check custom -->
    <style name="DarkCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorAccent">#8A0000</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <!-- End check custom -->

    <!-- Start spinner custom -->
    <style name="SpinnerDarkTheme">
        <item name="android:background">?colorPrimaryVariant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>
    <!-- End spinner custom -->

    <!-- Start settings custom -->
    <style name="PreferenceCategoryTitleTextAppearance" parent="PreferenceCategoryTitleTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsTheme" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceCategoryTitleTextAppearance">@style/PreferenceCategoryTitleTextAppearance</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textAppearance">?colorOnPrimary</item>
    </style>
    <!-- End settings custom -->

</resources>