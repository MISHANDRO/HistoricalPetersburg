<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/main_content_of_route"

    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:background="@drawable/background_primary_round_up_10"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_sheet_card"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="-150dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:transformPivotX="40dp"
        android:transformPivotY="350dp"
        app:cardCornerRadius="200dp">


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/bottom_sheet_route_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

<!--        <ImageView-->
<!--            android:id="@+id/bottom_sheet_route_image"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:importantForAccessibility="no"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:src="@drawable/menu_bg" />-->
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/number_of_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<TextView
    android:id="@+id/bottom_sheet_route_name"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:text="Route Name"
    android:textSize="20sp" />

<TextView
    android:id="@+id/bottom_sheet_route_short_desc"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:gravity="center"
    android:textStyle="italic"
    android:text="Text about something"
    android:textSize="24sp" />

<TextView
    android:id="@+id/bottom_sheet_route_long_desc"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:text="Some element, for example RecyclerView"
    android:textSize="32sp" />

</LinearLayout>
